<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/neuiblueclor"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        facebook:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        facebook:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <ImageView
            android:id="@+id/backsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@drawable/backarrow"
            android:tint="@color/white" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/apptitlelogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Sign Up With Email"
                android:gravity="left"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#d3ccc2"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/parentview"
        xmlns:custom="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:ads="http://schemas.android.com/apk/res-auto">







        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#d3ccc2"
                android:padding="5dp"
                android:layout_marginBottom="20dp"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_alignParentStart="true">






                <com.hhwt.travelplanner.widgets.font.RobotoTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center">
                </com.hhwt.travelplanner.widgets.font.RobotoTextView>

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/loginregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_gravity="center"
                    android:textColor="@color/neuiblueclor">
                </com.hhwt.travelplanner.widgets.font.RobotoTextView>






            </LinearLayout>
        </RelativeLayout>












        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/sim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/white"

                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    >

