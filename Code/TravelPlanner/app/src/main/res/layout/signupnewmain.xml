                        android:focusableInTouchMode="true"
                        app:typeface="robotoRegular"
                        android:id="@+id/input_repassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColorHint="#a8a8a8"
                        android:textColor="@color/blackcolorview"
                        />

                    <View
                        android:id="@+id/nv2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d3ccc2"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp"></View>





                    <com.hhwt.travelplanner.widgets.font.RobotoTextView
                        android:textAppearance="?android:textAppearanceSmall"
                        android:focusableInTouchMode="true"
                        app:typeface="robotoRegular"
                        android:id="@+id/passwordworntext"
                        android:layout_width="match_parent"
