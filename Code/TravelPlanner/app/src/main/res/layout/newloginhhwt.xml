<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
   android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/neuiblueclor"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        facebook:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        facebook:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <ImageView
            android:id="@+id/backlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@drawable/backarrow"
            android:tint="@color/white" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/apptitlelogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Log In To Account"
                android:gravity="left"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                 />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#d3ccc2"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/parentview"
        android:layout_height="match_parent"
        android:background="@color/white">







        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#d3ccc2"
                android:padding="5dp"
                android:layout_marginBottom="20dp"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_alignParentStart="true">






                    <com.hhwt.travelplanner.widgets.font.RobotoTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donâ€™t have an account?"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </com.hhwt.travelplanner.widgets.font.RobotoTextView>

                    <com.hhwt.travelplanner.widgets.font.RobotoTextView
                        android:id="@+id/signupregister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:layout_gravity="center"
                        android:textColor="@color/neuiblueclor">
                    </com.hhwt.travelplanner.widgets.font.RobotoTextView>






            </LinearLayout>
        </RelativeLayout>












        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/sim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:background="@color/white">


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/white"

    android:layout_margin="15dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >


        <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:textAppearance="?android:textAppearanceMedium"
                    android:focusableInTouchMode="true"
                    app:typeface="robotoRegular"
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <View
                    android:id="@+id/nv1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3ccc2"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="5dp"></View>





        <com.hhwt.travelplanner.widgets.font.RobotoTextView
            android:textAppearance="?android:textAppearanceSmall"
            android:focusableInTouchMode="true"
            app:typeface="robotoRegular"
            android:id="@+id/emailworntext"
            android:layout_width="match_parent"
            android:text="email"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/seconpluscolor"
            />





                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:textAppearance="?android:textAppearanceMedium"
                    android:focusableInTouchMode="true"
                    app:typeface="robotoRegular"
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <View
                    android:id="@+id/nv2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3ccc2"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"></View>


        <com.hhwt.travelplanner.widgets.font.RobotoTextView
            android:textAppearance="?android:textAppearanceSmall"
            android:focusableInTouchMode="true"
            app:typeface="robotoRegular"
            android:id="@+id/passwordworntext"
            android:layout_width="match_parent"
            android:text="password"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/seconpluscolor"
            />













    </LinearLayout>










    <!--
            <com.hhwt.travelplanner.widgets.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/text_size_small"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:focusable="false"
                android:layout_margin="20dp"
                app:rippleColors="@color/neuiblueclor">-->

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/loginbuttonbut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"

                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:text="Login"
                    android:background="@drawable/newlogincurvelight"
                    android:textAllCaps="false"
    android:textSize="18dp"

                     />





        <!--    </com.hhwt.travelplanner.widgets.MaterialRippleLayout>-->

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/forgotpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot your password?"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/neuiblueclor">
                </com.hhwt.travelplanner.widgets.font.RobotoTextView>






                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:weightSum="5"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="150dp"
                        android:layout_height="1dp"
                        android:background="#d3ccc2"


                        android:gravity="center"></View>

                    <com.hhwt.travelplanner.widgets.font.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18dp"
                        android:layout_weight="1"


                        />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="1dp"
                        android:background="#d3ccc2"
                        android:gravity="center"
                        ></View>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <!-- <com.facebook.login.widget.ProfilePictureView
                         android:id="@+id/profilePicture"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"

                         android:gravity="center_horizontal"
                         facebook:com_facebook_preset_size="normal" />-->

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginTop="5dp"
                    android:layout_margin="20dp"

                    android:layout_centerHorizontal="true"

                    android:background="@drawable/fbcurve"
                    >

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/loginbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/activity_horizontal_margin"
                        facebook:com_facebook_confirm_logout="false"
                        facebook:com_facebook_tooltip_mode="never_display"
                       />


                </LinearLayout>





            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>
</LinearLayout>