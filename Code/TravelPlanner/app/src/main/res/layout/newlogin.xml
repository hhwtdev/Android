<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackground"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:minWidth="300dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:id="@+id/input_email"
                    style="@style/Theme.App.Basetwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/black"
                    app:typeface="robotoBlack" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:id="@+id/input_password"
                    style="@style/Theme.App.Basetwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/black"
                    app:typeface="robotoBlack" />
            </android.support.design.widget.TextInputLayout>


            <com.hhwt.travelplanner.widgets.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/text_size_small"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:focusable="false"
                app:rippleColors="@color/colorPrimarytrans">

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/loginbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:minWidth="200dp"
                    android:padding="@dimen/spacing_medium"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/white"
                    app:typeface="robotoBold" />





            </com.hhwt.travelplanner.widgets.MaterialRippleLayout>



            <com.hhwt.travelplanner.widgets.font.RobotoTextView
                android:id="@+id/forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Forget Password"
                android:textAppearance="?android:textAppearance"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="#2B6390"
                android:textSize="14dp"
                app:typeface="robotoBlack" />





            <com.hhwt.travelplanner.widgets.font.RobotoTextView
                android:id="@+id/privatepolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:text="Issues with your login? Contact us at hello@havehalalwilltravel.com"
                android:textAppearance="?android:textAppearance"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:autoLink = "email"
                android:gravity="center"
                android:textSize="13dp"
                app:typeface="robotoBlack" />

          <!--  android:text="Please contact hello@havehalalwilltravel.com for login user"-->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>