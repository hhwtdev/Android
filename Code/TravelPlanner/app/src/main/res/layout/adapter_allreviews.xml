<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="3dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_xsmall">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:paddingTop="@dimen/spacing_xsmall"
                    android:text="Mathan"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    app:typeface="robotoLight" />

                <RatingBar
                    android:id="@+id/item_ratingBar"
                    style="@style/dialogMediaRationBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/spacing_xsmall"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/spacing_xsmall"></RatingBar>

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:paddingTop="@dimen/spacing_xsmall"
                    android:text="Awesome area"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorPrimary"
                    app:typeface="robotoBold" />

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item"
                    android:background="@android:color/transparent"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:text="Awesome area"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/colorPrimary"
                    app:typeface="robotoItalic" />

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:background="@android:color/transparent"
                    android:maxLines="3"
                    android:text="Awesome areagjgh"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    app:typeface="robotoLight" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="false"
                android:gravity="center_vertical"
                android:hapticFeedbackEnabled="true"
                android:paddingLeft="10dp"
                android:text="Deleted"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_undo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="Undo"
                android:textColor="@color/cpb_blue_dark" />

        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>