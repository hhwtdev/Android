<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackground"
    android:gravity="center">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="300dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_rename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:id="@+id/input_rename"
                    style="@style/Theme.App.Basetwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:hint="Name"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/black"
                    app:typeface="robotoBlack" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_remailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:id="@+id/input_remailid"
                    style="@style/Theme.App.Basetwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/black"
                    app:typeface="robotoBlack" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:id="@+id/input_repassword"
                    style="@style/Theme.App.Basetwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/black"
                    app:typeface="robotoBlack" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_reconformepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hhwt.travelplanner.widgets.font.RobotoEditText
                    android:id="@+id/input_reconformepassword"
                    style="@style/Theme.App.Basetwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/black"
                    app:typeface="robotoBlack" />
            </android.support.design.widget.TextInputLayout>







            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="10dp" />




            <com.hhwt.travelplanner.widgets.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/text_size_small"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:focusable="false"
                app:rippleColors="@color/colorPrimarytrans">

                <com.hhwt.travelplanner.widgets.font.RobotoTextView
                    android:id="@+id/registerbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:minWidth="200dp"
                    android:padding="@dimen/spacing_medium"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/white"
                    app:typeface="robotoBold" />

            </com.hhwt.travelplanner.widgets.MaterialRippleLayout>


            <com.hhwt.travelplanner.widgets.font.RobotoTextView
                android:id="@+id/privatepolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="By registering you agree to the "
                android:textAppearance="?android:textAppearance"
                app:typeface="robotoBlack" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>