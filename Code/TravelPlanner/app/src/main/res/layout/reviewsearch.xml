<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/findplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/samdelete"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.hhwt.travelplanner.widgets.font.RobotoTextView
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ihwa Mural Village"
                android:textAppearance="?android:textAppearanceMedium"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                android:textColorHint="@color/bb_darkBackgroundColor"
                app:typeface="robotoRegular"
                />

            <com.hhwt.travelplanner.widgets.font.RobotoTextView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sights &amp; Landmarks \n Seoul"
                android:textAppearance="?android:textAppearanceMedium"
                android:focusableInTouchMode="true"
                android:background="@android:color/transparent"
                app:typeface="robotoRegular"
                android:textColorHint="@color/bb_darkBackgroundColor"
                />
        </LinearLayout>
</LinearLayout>
    </LinearLayout>