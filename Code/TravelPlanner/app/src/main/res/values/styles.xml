<resources>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarnew">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">50sp</item>
        <!-- text size in menu-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <!-- item size in menu-->
    </style>

    <style name="Navigationsize">
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Ripple related styles -->
    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleColors">@color/main_color_grey_300</item>
        <item name="rippleAlpha">0.7</item>
        <item name="rippleDimension">45dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>



    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

    <!-- the color you want in selected tab -->
    <item name="tabIndicatorColor">#50000000</item>
    <item name="tabTextAppearance">@color/bgyellow</item>

    <!-- set the indicator hieght equal to tablayout height -->
    <item name="tabIndicatorHeight">60dp</item>
    <item name="tabSelectedTextColor">#222222</item>


    </style>


    <!-- CheckBox related styles end here -->


    <style name="dialogMediaRationBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dialog_media_rating_bar_full</item>
        <item name="android:minHeight">26dip</item>
        <item name="android:maxHeight">26dip</item>
        <item name="android:minWidth">26dip</item>
        <item name="android:maxWidth">26dip</item>
    </style>



    <style name="dialogMediareviewstar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dialog_media_rating_bar_fullreview</item>
        <item name="android:minHeight">46dip</item>
        <item name="android:maxHeight">46dip</item>
        <item name="android:minWidth">36dip</item>
        <item name="android:maxWidth">36dip</item>
    </style>





    <style name="dialogMediaRationBarss" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dialog_media_rating_bar_fullss</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
        <item name="android:minWidth">15dip</item>
        <item name="android:maxWidth">15dip</item>
    </style>














    <!-- CheckBox related styles end here -->
    <style name="RationBarCreateReiew" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dialog_media_rating_bar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>


    <style name="Theme.App.Basetwo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Theme.App.Basethree" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>


    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/neuiblueclor</item>
        <item name="android:textColorSecondary">@color/blackcolorview</item>
    </style>




</resources>
